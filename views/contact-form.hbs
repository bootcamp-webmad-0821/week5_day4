<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-6">

            <h1>Contacta con nosotros</h1>

            <hr>

            <form action="/contacto" method="POST">

                <div class="form-group">
                    <label for="name">Tu nombre</label>
                    <input type="text" class="form-control" id="name" name="name">
                </div>

                <div class="form-group">
                    <label for="subject">Asunto</label>
                    <input type="text" class="form-control" id="subject" name="subject">
                </div>

                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" name="to">
                    <small id="emailHelp" class="form-text text-muted">A efectos demostrativos</small>
                </div>

                <div class="form-group">
                    <label for="message">Mensaje</label>
                    <textarea class="form-control" id="message" rows="3" name="text"></textarea>
                </div>

                <button type="submit" class="btn btn-dark btn-block">Enviar Mensaje</button>
            </form>
        </div>
    </div>
</div>